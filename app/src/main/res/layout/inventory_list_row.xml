<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    // textview reference

    <ImageView
        android:id="@+id/treasureIcon"
        android:background="@drawable/ic_treasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weight=".25"/>

    <TextView
        android:id="@+id/treasureCounter"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/treasureIcon"
        android:text="@string/treasure01"
        android:weight=".5"
        android:layout_alignBottom="@+id/treasureIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>