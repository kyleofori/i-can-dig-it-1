<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#4a4a4a"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/treasureIcon"
        android:background="@drawable/ic_treasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/multipleSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YO"
        android:textColor="#EAEAEA"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/treasureIcon"
        android:paddingRight="5dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/treasureCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YO"
        android:textColor="#EAEAEA"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/multipleSign"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/treasureItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YO"
        android:textColor="#FFE168"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/treasureCounter"
        android:textSize="20dp"/>

</RelativeLayout>